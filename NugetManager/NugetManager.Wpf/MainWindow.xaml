<Window xmlns:hc="https://handyorg.github.io/handycontrol"  x:Class="NugetManager.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NugetManager.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Column for the ListBox, takes all space -->
        </Grid.ColumnDefinitions>

        <ListBox Name="listBoxSources" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
                 SelectionMode="Single"
                 SelectionChanged="listBoxSources_SelectionChanged"/>
    </Grid>
</Window>
